<h1 class="page-title">New Plant</h1>

<%= form_for @plant, {url: garden_plants_path(@garden)} do |f| %>
  <div class="signup row">
    <div class="col-md-3">
      <%= f.text_field :name, placeholder: "Name" %><br>
      <%= f.text_field :health, placeholder: "Health"%><br>
      <%= f.text_area :notes, placeholder: "Notes", size: "30", class: "notes"  %><br>
      
      <div ng-click="test()"><%= f.submit "Submit",  class: "btn btn-submit"%></div>
    </div>
 <!--    This will show up when they submit (add variety to plant) -->
    <div class="col-md-3">

    </div>
  <!--   end variety selector -->
    <div class="col-md-3 col-md-offset-3">
      <a class="btn btn-submit" href="<%= gardens_path %>"><span class="glyphicon glyphicon-th-large"></span> Back to all Gardens</a>
    </div>
  </div>
  
<% end %> 

