<h1>New Plant</h1>

<%= form_for @plant, {url: garden_plants_path(@garden)} do |g| %>
  <%= g.text_field :name, placeholder: "Name" %>
  <%= g.text_field :health, placeholder: "Health" %>
  <%= g.text_field :notes, placeholder: "Notes" %>
  <%= g.collection_select :variety_id, Variety.all, :id, :variety %>

  <%= g.submit "Add Plant" %>
  
<% end %> 

<%= link_to "See all your gardens ", garden_plants_path %>
