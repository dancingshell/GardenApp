<h1 class="page-title">New Plant</h1>

<%= form_for @plant, {url: garden_plants_path(@garden)} do |f| %>
  <div class="signup row">
    <div class="col-md-3">
      <%= f.text_field :name, placeholder: "Name" %><br>
      <%= f.text_field :health, placeholder: "Health"%><br>
      <%= f.collection_select :variety_id, Variety.all, :id, :variety, :prompt => "Select Variety"%><br>
      <div class="btn btn-warning btn-variety" data-toggle="modal" data-target"#myModal"><span class="glyphicon glyphicon-plus"></span>Add Variety</div>
      </div>
    <div class="col-md-3">
      <%= f.text_area :notes, placeholder: "Notes", size: "30", class: "notes"  %><br>
      <%= f.submit "Submit", class: "btn btn-submit" %>
    </div>
    <div class="col-md-3 col-md-offset-3">
      <a class="btn btn-submit" href="<%= gardens_path %>"><span class="glyphicon glyphicon-th-large"></span> Back to all Gardens</a>
    </div>
  </div>
<% end %> 
  
