<h1 class="page-title">New Plant</h1>

<%= form_for @plant, {url: garden_plants_path(@garden)} do |f| %>
  <div class="signup row">
    <div class="col-md-3">
      <%= f.text_field :name, placeholder: "Name" %><br>
      <%= f.text_field :health, placeholder: "Health"%><br>
      <%= f.collection_select :variety_id, Variety.all, :id, :variety, :prompt => "Select Variety"%><br>
      <div class="btn btn-warning btn-variety" data-toggle="modal"
   data-target="#varietyModal" ng-click="varietyToggle()"><span class="glyphicon glyphicon-plus"></span>Add Variety</div>

      <div ng-show="variety==true" class="variety row">
      
      </div>

      </div>
    <div class="col-md-3">
      <%= f.text_area :notes, placeholder: "Notes", size: "30", class: "notes"  %><br>
      <%= f.submit "Submit", class: "btn btn-submit" %>
    </div>
    <div class="col-md-3 col-md-offset-3">
      <a class="btn btn-submit" href="<%= gardens_path %>"><span class="glyphicon glyphicon-th-large"></span> Back to all Gardens</a>
    </div>
  </div>
  
<% end %> 

<div class="modal fade" id="varietyModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&amp;times;</button> -->
            <h4 class="modal-title" id="myModalLabel">Add Plant Category</h4>
            </div>
            <div class="modal-body">
                <h3>
                  <h1>Test</h1>
                  <%= fields_for :variety, @plant.variety do |variety| %>
                  <%= variety.text_field :variety_id %>
                  <%= variety.submit "Submit Variety", class: "btn btn-submit" %>
        <% end %>

                </h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-variety" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-submit">Add</button>
        </div>
    </div>
  </div>
</div>
  