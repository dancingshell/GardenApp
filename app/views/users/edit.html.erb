<h1 class="page-title">Edit your information</h1><a class="btn btn-submit signup" href="<%= user_path(current_user) %>"><span class="glyphicon glyphicon-chevron-left"></span> Back to Profile</a>

<div class="signup row">
  <div class="col-md-3">
    <%= form_for @user do |f| %>
      <%= f.text_field :first_name, placeholder: "First name" %>
      <%= f.text_field :first_name, placeholder: "Last Name" %>
      <%= f.password_field :password, placeholder: "Password" %>
      <%= f.password_field :password_confirmation, placeholder: "Repeat Password" %>
      <%= f.text_field :email, placeholder: "E-mail" %>
      <%= f.text_field :zipcode, placeholder: "Zipcode" %><br>
  </div>
  <div class="col-md-3">
      <h3>Edit profile picture</h3>
        <%= render "partials/avatar" %>
        <%= f.file_field :avatar %>

        <%= f.submit "Edit", class: "btn btn-submit" %>
  </div>
    <% end %>
  <div class="col-md-3 col-md-offset-3">
    <%= link_to "Delete your account...", :user, method: :delete, data: {confirm: 'Are you sure you want to delete it?'}, class: "btn btn-danger" %>

  </div>
